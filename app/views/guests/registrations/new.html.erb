<div class="container w-50">
  <h2 class="mb-3 text-center">Criar conta de hóspede</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "guests/shared/error_messages", resource: resource %>
  
    <div class="field row mb-3">
      <%= f.label :name, 'Nome completo', class: 'col-5 col-form-label' %>
      <div class="col-7">
        <div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
                           class: 'form-control' %>
        </div>
      </div>
    </div>
  
    <div class="field row mb-3">
      <%= f.label :document, 'CPF', class: 'col-5 col-form-label' %>
      <div class="col-7">
        <div>
          <%= f.text_field :document, autocomplete: "document",
                           class: 'form-control' %>
        </div>
      </div>
    </div>
  
    <div class="field row mb-3">
      <%= f.label :email, 'E-mail', class: 'col-5 col-form-label' %>
      <div class="col-7">
        <div>
          <%= f.email_field :email, autocomplete: "email",
                            class: 'form-control' %>
        </div>
      </div>
    </div>
  
    <div class="field row mb-3">
      <div class="col-5 col-form-label">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %>
      </div>
      <div class="col-7">
        <div>
          <%= f.password_field :password, autocomplete: "new-password",
                               class: 'form-control' %>
        </div>
      </div>
    </div>
  
    <div class="field row mb-3">
      <%= f.label :password_confirmation, class: 'col-5 col-form-label' %>
      <div class="col-7">
        <div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                               class: 'form-control' %>
        </div>
      </div>
    </div>
  
    <div class="row align-items-center">
      <div class="col-9 text-start">
        <%= render "guests/shared/links" %>
      </div>
      <div class="col-3 text-end">
        <%= f.submit t('save'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
