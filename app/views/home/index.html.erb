<div class="home_page_content">
  <% if @recent_guesthouses.any? %>
    <div class="row">
      <div class="available_cities col-4">
        <div class="cities_list-header">Cidades disponÃ­veis</div>
        <ul class="cities_list list-group">
          <% @available_cities.each do |city| %>
            <li class="cities_list-city_link list-group-item">
              <%= link_to city, guesthouses_by_city_path(params: { city: city }) %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="guesthouse_listing col-8">
        <h2>Pousadas Recentes</h2>
        <div class="recent_guesthouses row text-center border rounded mb-5">
          <% @recent_guesthouses.each do |g| %>
            <div class="guesthouse_listing-item col-4 p-3">
              <div class="guesthouse_listing-item-name fs-4">
                <%= link_to g.brand_name, g %>
              </div>
              <div class="guesthouse_listing-item-city">
                <%= g.address.city %>
              </div>
            </div>
          <% end %>
        </div>

        <% if @other_guesthouses.any? %>
          <div class="other_guesthouses row text-center">
            <div class="guesthouse_listing-item row">
              <% @other_guesthouses.each do |g| %>
                  <div class="col-4 p-3">
                    <div class="guesthouse_listing-item-name fs-4">
                      <%= link_to g.brand_name, g %>
                    </div>
                    <div class="guesthouse_listing-item-city">
                      <%= g.address.city %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        <% end %>

    </div>
      
    </div>
  <% else %>
    <h2>Nenhuma pousada cadastrada</h2>
  <% end %>


</div>
