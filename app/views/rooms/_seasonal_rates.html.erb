<dt><strong>Preços por período:</strong></dt>
<dd>
  <ul class="seasonal_rates_list">
    <%=
      link_to(
        'Adicionar preço por período',
        new_guesthouse_room_seasonal_rate_path(@room.guesthouse_id, @room.id)
      )
    %>
    <li>
      <strong>Padrão:</strong>
      <%= number_to_currency(@room.daily_rate) %>
    </li>
    
    <% @active_seasonal_rates.each do |sr| %>
      <li>
        <strong>
          De <%= I18n.localize(sr.start_date) %>
          a <%= I18n.localize(sr.finish_date) %>: 
        </strong> <%= number_to_currency(sr.rate) %>

      | <%= link_to('Detalhes', [@guesthouse, @room, sr]) %>
      </li>
    <% end %>
  </ul>
</dd>